<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditSearchStyle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/spacing_standard_new</item>
        <item name="android:paddingEnd">@dimen/spacing_control</item>
        <item name="android:paddingTop">@dimen/spacing_middle</item>
        <item name="android:paddingBottom">@dimen/spacing_middle</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@drawable/bg_edittext_search</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginStart">@dimen/spacing_standard_new</item>
        <item name="android:layout_marginEnd">@dimen/spacing_standard_new</item>
    </style>
</resources>