<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cityListFragment">
  <fragment
      android:id="@+id/cityListFragment"
      android:name="com.pavel.citybase.ui.cityList.CityListFragment"
      android:label="@string/app_name"
      tools:layout="@layout/city_list_fragment">
    <action
        android:id="@+id/displayOnMap"
        app:destination="@id/CityDisplayFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@+id/cityListFragment"/>
  </fragment>
  <fragment
      android:id="@+id/CityDisplayFragment"
      android:name="com.pavel.citybase.ui.cityDisplay.CityDisplayFragment"
      android:label="@string/app_name">
    <argument
        android:name="params"
        app:argType="com.pavel.citybase.ui.cityDisplay.MapParams"
        />
    <action
        android:id="@+id/show_map"
        app:destination="@id/CityDisplayFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        app:popEnterAnim="@anim/nav_default_pop_enter_anim"
        app:popExitAnim="@anim/nav_default_pop_exit_anim"
        app:popUpTo="@+id/cityDetailsFragment"/>
  </fragment>
</navigation>
