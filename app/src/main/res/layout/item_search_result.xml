<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/searchItemLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivImgSong"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/city_variant_outline" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/spacing_middle"
            android:layout_toEndOf="@id/ivImgSong"
            android:text="@string/sydney"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/font_size_normal"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCoordinates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCityName"
            android:layout_alignBottom="@id/ivImgSong"
            android:layout_marginStart="@dimen/space_16dp"
            android:layout_marginTop="@dimen/spacing_control"
            android:layout_marginBottom="@dimen/spacing_control"
            android:layout_toEndOf="@id/ivImgSong"
            android:gravity="bottom"
            android:text="@string/lat_long_ex"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/font_size_medium" />

        <ImageView
            android:layout_width="@dimen/space_30dp"
            android:layout_height="@dimen/space_30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacing_standard"
            android:padding="@dimen/spacing_control"
            android:src="@drawable/ic_keyboard_arrow_right" />

    </RelativeLayout>
</layout>